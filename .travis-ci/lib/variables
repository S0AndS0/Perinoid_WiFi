Var_main_script_name="Paranoid_WiFi.sh"
Var_main_script_apt_get_depends_list="openvpn,dnsutils,haveged"
Var_local_ip="$(ip addr | awk '/inet/{print $2}' | grep -vE '127' | awk '{gsub("/"," "); print $1}' | head -n1)"
Var_external_ip="$(dig +short myip.opendns.com @resolver1.opendns.com)"
Var_server_country="$(curl ipinfo.io | awk '/country/{gsub("\"",""); print $2}' | sed 's/,//g')"
Var_server_city="$(curl ipinfo.io | awk '/city/{gsub("\"",""); print $2}' | sed 's/,//g')"
Var_server_email="admin@hostname.local"
Var_listen_port="9988"
Var_client_users_list="$(id -un)"
